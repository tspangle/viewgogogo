  <footer>
    <p>&copy; {new Date().getFullYear()} My Site.</p>
  </footer>

  <!-- ✅ 现在可以安全使用 -->
  <AdSense client="ca-pub-XXXXXXXXXXXXXXXX" />
</body>
</html>